<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <style>
        /* Reset margins and paddings */
        body,
        ul {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 20px;
        }

        /* Navbar styles */
        nav {
            background-color: #343a40;
            color: white;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            padding: 10px 0;
            z-index: 1000;
        }

        nav ul {
            list-style: none;
            display: flex;
            justify-content: center;
            padding: 0;
        }

        nav ul li {
            margin: 0 10px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            display: block;
        }

        nav ul li a:hover {
            background-color: #495057;
            border-radius: 5px;
        }

        /* Content styles */
        .content {
            margin-top: 60px;
            /* Adjust for fixed navbar height */
        }

        form {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        form input,
        form button {
            margin: 0 5px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        form button {
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

        form button:hover {
            background-color: #0056b3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: white;
        }

        table th,
        table td {
            padding: 12px;
            border: 1px solid #dee2e6;
            text-align: left;
        }

        table th {
            background-color: #343a40;
            color: white;
        }

        table td form {
            display: inline-block;
            margin: 0;
        }

        table td form input,
        table td form button {
            margin: 0 3px;
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        table td form button {
            background-color: #dc3545;
            color: white;
            border: none;
            cursor: pointer;
        }

        table td form button:hover {
            background-color: #c82333;
        }

        table td form button[type="submit"] {
            background-color: #28a745;
        }

        table td form button[type="submit"]:hover {
            background-color: #218838;
        }
        #delete {
            background-color: #c82333;
        }
    </style>
</head>

<body>
    <nav>
        <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/customers">Customers</a></li>
            <li><a href="/products">Products</a></li>
            <li><a href="/orders">Orders</a></li>
            <li><a href="/orders/create">Create Order</a></li>
            <li><a href="/bill">Bill</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="content">
        <h1>Products</h1>
        <form action="/products/add" method="POST">
            <input type="text" name="product_name" placeholder="Product Name" required>
            <input type="number" name="price" placeholder="Price" min="0" required>
            <button type="submit">Add Product</button>
        </form>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((product)=> { %>
                    <tr>
                        <td>
                            <%= product.product_name %>
                        </td>
                        <td>
                            <%= product.price %>
                        </td>
                        <td>
                            <form action="/products/edit/<%= product._id %>" method="POST">
                                <input type="text" name="product_name" value="<%= product.product_name %>" required>
                                <input type="number" name="price" value="<%= product.price %>" min="0" required>
                                <button type="submit">Edit</button>
                            </form>
                            <form action="/products/delete/<%= product._id %>" method="POST">
                                <button id="delete" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>
