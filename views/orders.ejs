<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <style>
        /* Reset margins and paddings */
        body,
        ul {
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 20px;
        }

        /* Navbar styles */
        nav {
            background-color: #343a40;
            color: white;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            padding: 10px 0;
            z-index: 1000;
        }

        nav ul {
            list-style: none;
            display: flex;
            justify-content: center;
            padding: 0;
        }

        nav ul li {
            margin: 0 10px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            display: block;
        }

        nav ul li a:hover {
            background-color: #495057;
            border-radius: 5px;
        }

        /* Content styles */
        .content {
            margin-top: 60px;
            /* Adjust for fixed navbar height */
        }

        .form-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .form-container form {
            margin: 0;
        }

        .form-container form select,
        .form-container form input,
        .form-container form button {
            margin: 0 5px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .form-container form button {
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
        }

        .form-container form button:hover {
            background-color: #0056b3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: white;
        }

        table th,
        table td {
            padding: 12px;
            border: 1px solid #dee2e6;
            text-align: left;
        }

        table th {
            background-color: #343a40;
            color: white;
        }

        table td form {
            display: inline-block;
            margin: 0;
        }

        table td form button {
            background-color: #dc3545;
            color: white;
            border: none;
            cursor: pointer;
            padding: 5px;
            border-radius: 5px;
        }

        table td form button:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body>
    <nav>
        <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/customers">Customers</a></li>
            <li><a href="/products">Products</a></li>
            <li><a href="/orders">Orders</a></li>
            <li><a href="/orders/create">Create Order</a></li>
            <li><a href="/bill">Bill</a></li>
            <li><a href="/auth/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="content">
        <h1>All Orders</h1>
        <div class="form-container">
            <form method="GET" action="/orders">
                <input type="date" name="startDate" value="<%= startDate %>">
                <input type="date" name="endDate" value="<%= endDate %>">
                <select name="timeOfDay">
                    <option value="" <%=!timeOfDay ? 'selected' : '' %>>All</option>
                    <option value="Morning" <%=timeOfDay==='Morning' ? 'selected' : '' %>>Morning</option>
                    <option value="Evening" <%=timeOfDay==='Evening' ? 'selected' : '' %>>Evening</option>
                </select>
                <button type="submit">Filter</button>
            </form>
            <!-- PDF Download Form -->
            <form method="POST" action="/orders/download">
                <input type="hidden" name="startDate" value="<%= startDate %>">
                <input type="hidden" name="endDate" value="<%= endDate %>">
                <input type="hidden" name="timeOfDay" value="<%= timeOfDay %>">
                <button type="submit">Download PDF</button>
            </form>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Date</th>
                    <th>Customer Name</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Time</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach((order)=> { %>
                    <tr>
                        <td>
                            <%= order.customer.sr_no %>
                        </td>
                        <td>
                            <%= order.date.toDateString() %>
                        </td>
                        <td>
                            <%= order.customer.customer_name %>
                        </td>
                        <td>
                            <%= order.product.product_name %>
                        </td>
                        <td>
                            <%= order.quantity %>
                        </td>
                        <td>
                            <%= order.timeOfDay %>
                        </td>
                        <td>₹<%= order.price %>
                        </td>
                        <td>
                            <form action="/orders/delete/<%= order._id %>" method="POST"
                                onsubmit="return confirm('Are you sure you want to delete this order?');">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <div style="margin-top: 20px; font-size: 16px; font-weight: bold; text-align: right;">
            <p>Total Quantity: <%= totalQuantity %>
            </p>
            <p>Total Amount: ₹<%= totalAmount.toFixed(2) %>
            </p>
        </div>
    </div>
</body>

</html>
